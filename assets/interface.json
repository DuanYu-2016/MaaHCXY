{
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb"
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "Visual Studio"
            }
        }
    ],
    "resource": [
        {
            "name": "官服",
            "path": [
                "{PROJECT_DIR}/resource"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "在投骰子界面开始任务",
            "entry": "投骰子",
            "doc": "※战斗固定选择第一个队列\n\n※需要提前设置倍速【急速】、自动战斗【开】、异核动画【简化】等选项，战斗时间过长会中止\n\n※不会修改巡游深度"
        }
    ]
}